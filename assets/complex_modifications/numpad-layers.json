{
    "title": "Optionキーを押しながら数字入力レイヤーを有効にする",
    "rules": [
        {
            "description": "Optionキーを押しながら数字入力レイヤーを有効にする（0はNキー）",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": { "optional": ["any"] }
                    },
                    "to": [
                        { "set_variable": { "name": "num_layer", "value": 1 } }
                    ],
                    "to_after_key_up": [
                        { "set_variable": { "name": "num_layer", "value": 0 } }
                    ],
                    "to_if_alone": [{ "key_code": "left_option" }]
                },

                {
                    "type": "basic",
                    "from": {
                        "key_code": "u",
                        "modifiers": { "optional": ["any"] }
                    },
                    "to": [{ "key_code": "keypad_7" }],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "num_layer",
                            "value": 1
                        }
                    ]
                },
                {
